<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Register</title>
    <!-- for language  -->
    <meta charset="utf-8" />

    <!-- Responsive Design -->
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />

    <!-- Bootstrap CSS v5.2.1 -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />

    <!-- Font Awesome  -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
      integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />

    <!-- External css -->
    <link rel="stylesheet" href="/css/register.css" />
  </head>

  <body class="container bg-primary-subtle ">
    <!-- start codes -->

    <h1 class="text-center text-uppercase text-primary mt-2">Sign Up</h1>

 
    <div class="form-container border rounded-1 shadow-sm bg-white">

    <form action="/register" method="POST" id="register-form" class=" p-3">
      <!-- Dikkat: Eğer bunu yazmazsanız hata alırsınız. CSRF (Cross-Site Request Forgery) -->
      <input type="hidden" name="_csrf" id="_csrf" value="<%= csrfToken %>" />

      <!-- USERNAME -->
      <div class="form-group mb-3">
        <label for="username" class="form-label">Username</label>
        <!-- required kaldırdım -->
        <input
          type="text"
          id="username"
          name="username"
          class="form-control"
          placeholder="ArthurDent"
          required
          autofocus
        />
      </div>

      <!-- PASSWORD -->
      <div class="form-group mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          id="password"
          name="password"
          class="form-control"
          placeholder="password"
          required
          autofocus
        />
      </div>

      <!-- EMAIL -->
      <div class="form-group mb-3">
        <label for="email" class="form-label">Email</label>
        <input
          type="text"
          id="email"
          name="email"
          class="form-control"
          placeholder="arthurdent@example.com"
          required
          autofocus
        />
      </div>


      <!-- BLOG BUTTON -->
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
  <table id="user-table" class="table table-hover table-striped">
    <thead>
      <tr>
        <th class="text-uppercase">ID</th>
        <th class="text-uppercase">Username</th>
        <th class="text-uppercase">Password</th>
        <th class="text-uppercase">Email</th>
        <th class="text-uppercase">Created Date</th>
        <th class="text-uppercase">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
        <tr  data-id="<%= user._id %>">
          <td><%= user._id %></td>
          <td><%= user.username %></td>
          <td><%= user.password %></td>
          <td><%= user.email %></td>
          <td><%= new Date(user.createdAt).toLocaleString() %></td>
          <td>
            <button class="btn btn-primary edit-btn" data-id="<%= user._id %>"><i class="fa-solid fa-wrench"></i></button>
            <button class="btn btn-danger delete-btn" data-id="<%= user._id %>"><i class="fa-solid fa-trash"></i></button>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>




    <!-- end codes -->
    <!-- Bootstrap JavaScript Libraries -->
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
      integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
      crossorigin="anonymous"
    ></script>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- external js -->
    <!-- NOT: `/public/js/styles.js` için  public dizininde olması gerekiyor -->
    <script src="/js/register.js"></script>
  </body>
</html>
